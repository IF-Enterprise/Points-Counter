<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/bg_gradient_moderno">

    <TextView
        android:id="@+id/tvTituloAjustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🏆 VICTORY PLAYER 🏆"
        android:textColor="#FFC100"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginBottom="40dp"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="6"/>

    <Button
        android:id="@+id/btonMenu"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="✨ Ir al Menú"
        android:background="@drawable/btn_creativo_1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnAgain"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="🎮 Jugar de Nuevo"
        android:background="@drawable/btn_creativo_2"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"/>

</LinearLayout>
