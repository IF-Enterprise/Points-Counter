<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/settings_background">

    <TextView
        android:id="@+id/tvTituloAjustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚙️ AJUSTES DE PARTIDA ⚙️"
        android:textColor="#FFFF1A"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>


    <!-- 🔥 Nuevo: Puntos por set -->
    <TextView
        android:id="@+id/tvPuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos por set: 11"
        android:textColor="#FFFF33"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <SeekBar
        android:id="@+id/seekBarPuntos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="50"
        android:progress="11"/>


    <!-- Número de sets -->
    <TextView
        android:id="@+id/tvSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de sets: 3"
        android:textColor="#FFFF33"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <SeekBar
        android:id="@+id/seekBarSets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="6"
        android:progress="3"
        android:visibility="gone"/>

    <!-- Número de games (solo visible en tenis) -->
    <TextView
        android:id="@+id/tvGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de games: 0"
        android:textColor="#FFFF33"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <SeekBar
        android:id="@+id/seekBarGames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"
        android:visibility="gone"/>

    <!-- 🔥 Nuevo: Duración del partido -->
    <TextView
        android:id="@+id/tvDuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duración del partido (min): 90"
        android:textColor="#FFFF33"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <SeekBar
        android:id="@+id/seekBarDuracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="180"
        android:progress="90"
        android:visibility="gone"/>

    <!-- Botón confirmar -->
    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✅ Confirmar"
        android:backgroundTint="#FFFF33"
        android:textColor="#222222"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

</LinearLayout>
