<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/button_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev Games"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121212"
        app:layout_constraintTop_toBottomOf="@id/button_games"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageButton
                android:id="@+id/my_image_btn_football"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/rounded_button_bg"
                android:elevation="10dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/tennis"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/my_image_btn_padel"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/rounded_button_bg"
                android:elevation="10dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/tennis"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/my_image_btn_tennis"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/rounded_button_bg"
                android:elevation="10dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/tennis"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/my_image_btn_pingpong"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/rounded_button_bg"
                android:elevation="10dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/pingpongpixel" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>