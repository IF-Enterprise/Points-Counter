<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_scoreboard">


    <!--Red -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="156dp"
        android:layout_height="194dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="504dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/red_pts"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/red_dark"
            android:textSize="48sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/red_minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Button" />

        <Button
            android:id="@+id/red_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Button" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="376dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp">

        <TextView
            android:id="@+id/red_sets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/red_player"
            android:textSize="36sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


    <!-- blue -->
    <androidx.cardview.widget.CardView
        android:layout_width="156dp"
        android:layout_height="194dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="60dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp">

        <TextView
            android:id="@+id/blue_pts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/blue_player"
            android:textSize="48sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/blue_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="button" />

        <Button
            android:id="@+id/blue_minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Button" />
    </androidx.cardview.widget.CardView>

    <!-- games player red(left) and blue(right) -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="276dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp">

        <TextView
            android:id="@+id/blue_sets"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/blue_dark"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="202dp"
        android:layout_height="34dp"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="248dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp">

        <TextView
            android:id="@+id/red_games"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="0"
            android:textColor="@color/red_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="376dp" />

        <TextView
            android:id="@+id/blue_games"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:textColor="@color/blue_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

