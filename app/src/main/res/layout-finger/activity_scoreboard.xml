<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.ScoreboardActivity"
    tools:ignore="MissingDefaultResource">

    <!-- Caja Azul (Jugador 2) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/blue_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/blue_player"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toStartOf="@id/red_card"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Puntuación Azul -->
            <TextView
                android:id="@+id/blue_scorepts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold" />

            <!-- Botones Azul -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/blue_plus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/blue_dark"
                    android:text="▲"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/blue_minus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/blue_dark"
                    android:text="▼"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Caja Roja (Jugador 1) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/red_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/red_player"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintStart_toEndOf="@id/blue_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Puntuación Roja -->
            <TextView
                android:id="@+id/red_scorepts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold" />

            <!-- Botones Rojos -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/red_plus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/red_dark"
                    android:text="▲"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/red_minus"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/red_dark"
                    android:text="▼"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="2dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_back_scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_background"
        android:drawableStart="@drawable/ic_back"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/blue_scoresets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/red_card"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="614dp" />

    <TextView
        android:id="@+id/red_scoresets"
        android:layout_width="49dp"
        android:layout_height="71dp"
        android:layout_marginBottom="44dp"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="231dp" />

    <TextView
        android:id="@+id/blue_scoregames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/red_card"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="504dp" />

    <TextView
        android:id="@+id/red_scoregames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_card"
        app:layout_constraintVertical_bias="0.636"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
